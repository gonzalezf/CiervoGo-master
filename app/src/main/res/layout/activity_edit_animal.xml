<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Animal"        />


    <EditText
        android:id="@+id/txtAnimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nameAnimalHint"
         />
    <Button android:id="@+id/btnAddNewAnimal"
        android:text="Crear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Animal"
        />

    <Spinner android:id="@+id/spinAnimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnUpdateAnimal"
        android:text="Actualizar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>




</LinearLayout>
